{
    "manifest_version": 2,
    "name": "Kattis UI Fix ",
    "description": "Adds back the old Kattis UI buttons on problem pages as well as a toggle to hide the editor panel.",
    "version": "0.1.0",
    "icons": {
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://open.kattis.com/problems/*"
            ],
            "js": [
                "content_script.js"
            ],
            "css": [
                "content_script.css"
            ],
            "run_at": "document_idle"
        }
    ]
}